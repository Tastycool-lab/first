{% extends 'base.html.twig' %}

{% block title %}Hello ReadingsController!{% endblock %}

{% block body %}
    <h1>{{  books | length }} books</h1>
    <div id="todo"></div>

<div class="form-group">
    <select  id="selectCategory" class="form-control">
        {% for cat in categories %}
            <option value="{{ cat.id }}">{{ cat.name }}</option>
        {%  endfor %}
    </select>
    </div>
    <div class="content" id="contentBook">

    {% for book in books %}
        <div class="book">
        </div>
        {#{{  include('readings/partials/_abook.html.twig', {book: book}) }}#}
        <hr>

    {% endfor %}
    </div>

{% endblock %}

